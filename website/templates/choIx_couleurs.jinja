{% set game = engine.current_game %}
{% extends "base.jinja" %}
{% block title %}{{text["colors"][player.lang_id]}}{% endblock %}
{% block player_money %}{% endblock %}
{% block stars_table %}{% endblock %}
{% block donation_button %}{% endblock %}
{% block content %}

<div class="w3-center w3-display-middle large w3-padding-small" style="width:100%; height:100%; max-width:700px; display:flex; flex-direction:column; justify-content:space-around">
{% for color in game.colors %}
<div style="height:19vh; margin:2%;">
    <button onclick="select_color('{{color}}');" id={{color}} type="submit" name="couleurs" value={{color}} class="w3-round-large {{ color }}-light border-{{ color }}" style="width:100%; height:100%;">
    {% if color in game.owner %}
    {{ game.owner[color].name }}
    {% endif %}
    </button>
</div>
{% endfor %}
</div>

{% endblock %}
{% block additionnal_script %}
    function select_color(color) {
      socket.emit('select_color', color);
    }
{% endblock %}

