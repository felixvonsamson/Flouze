{% set game = engine.current_game %}
{% extends "base.jinja" %}
{% block title %}Couleurs{% endblock %}
{% block player_money %}{% endblock %}
{% block stars_table %}{% endblock %}
{% block donation_button %}{% endblock %}
{% block content %}

<div class="w3-center w3-display-middle large w3-padding-small" style="width:100%; height:100%; max-width:700px; display:flex; flex-direction:column;">
{% for color, owner in zip(game.colors, game.owner) %}
<div style="flex-grow: 1; margin:2%;">
    <button onclick="select_color({{color['id']}});" id={{color["name"]}} type="submit" name="couleurs" value={{ color["id"] }} class="w3-round-large" style="width:100%; height:100%; background-color:{{ color["primary"] }}; border:4px solid {{ color["secondary"] }}">
    {% if owner %}
    {{ owner.name }}
    {% else %}
    <span style="color:{{ color["primary"] }}">*</span>
    {% endif %}
    </button>
</div>
{% endfor %}
</div>

{% endblock %}
