{% set game = engine.current_game %}
{% extends "base.jinja" %}
{% block title %}Couleurs{% endblock %}
{% block player_money %}{% endblock %}
{% block stars_table %}{% endblock %}
{% block donation_button %}{% endblock %}
{% block content %}

<div class="w3-center w3-display-middle large w3-padding-small" style="width:100%; height:100%; max-width:700px; display:flex; flex-direction:column; justify-content:space-around">
{% for color, owner in zip(game.colors, game.owner) %}
<div style="height:19vh; margin:2%;">
    <button onclick="select_color({{color['id']}});" id={{color["name"]}} type="submit" name="couleurs" value={{ color["id"] }} class="w3-round-large {{ color['name'] }}-light border-{{ color['name'] }}" style="width:100%; height:100%;">
    {% if owner %}
    {{ owner.name }}
    {% endif %}
    </button>
</div>
{% endfor %}
</div>

{% endblock %}
{% block additionnal_script %}
    function select_color(color_id) {
      socket.emit('select_color', color_id);
    }
{% endblock %}

