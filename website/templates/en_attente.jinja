{% set game = engine.current_game %}
{% extends "base.jinja" %}
{% block title %}Flouze{% endblock %}
{% block content %}

<div class="w3-pale-blue w3-round-large w3-border w3-border-blue w3-center w3-padding animate__animated animate__fadeIn">
  En attente des autres joueurs<br>
  <span class="large" id="count">{{ game.current_waiting_count }} / 5</span>
</div>

{% endblock %}
{% block additionnal_script %}
    socket.on('waiting_count', function(count) {
        document.getElementById('count').innerHTML = count;
    });
{% endblock %}}
