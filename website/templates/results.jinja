{% set game = engine.current_game %}
{% set stage = engine.current_stage %}
{% extends "base.jinja" %}
{% block title %}{{text["game "+game.game_nb|string][player.lang_id]}}{% endblock %}
{% block stars_table %}{% if stage[0] == 5 and stage[1] %}{% else %}{{ super() }}{% endif %}{% endblock %}
{% block donation_button %}{% if stage[0] == 5 %}{% else %}{{ super() }}{% endif %}{% endblock %}
{% block content %}

<div class="w3-panel w3-pale-blue w3-round-large w3-border w3-border-blue w3-center w3-padding w3-margin animate__animated animate__fadeIn">
  {{ player.message }}
  {% if player.last_profit != 0 %}
    <form action="partager_profit" method="GET">
      <button name="partager" type="submit" class="w3-btn w3-green w3-margin">{{text["share"][player.lang_id]}}</button>
    </form>
  {% endif %}
</div>

{% endblock %}
