{% extends "base+don.html" %} {% block title %}Flouze - Jeu 4{% endblock %} {% block content
%}
<div class="w3-display-middle w3-center animate__animated animate__fadeIn" style="width:320px;">
  <div class="w3-margin-bottom" style="display:flex; justify-content:space-between;">
  
	{% for i in range(2) %}
    <div class="flip-card" style="width:150px; height:120px;">
      <div id="card{{i}}" {% if engine.current_game.current_reveal_state[i] %} style="transform: rotateY(180deg)" {% endif %} class="flip-card-inner">
        <div class="flip-card-front" style="background-color:{{engine.players[i].color}};">
          <h4><b>{{engine.players[i].name}}</b></h4>
        </div>
        <div class="flip-card-back" style="background-color:{{engine.players[i].color}};">
          <h4><b>{{engine.players[i].name}}</b></h4>
			{% if engine.current_game.current_prizes[engine.players[i].choice] == "star" %}
			  {% if engine.players[i].choice == 3 %}
				<div class="w3-xlarge w3-padding w3-margin w3-text-teal" style="background-color:{{engine.players[i].sec_color}}"><i class="fa fa-star"></i></div>
			  {% else %}
				<div class="w3-xlarge w3-padding w3-margin w3-text-white" style="background-color:{{engine.players[i].sec_color}}"><i class="fa fa-star"></i></div>
			  {% endif %}
			{% else %}
			<div class="w3-xlarge w3-padding w3-margin w3-text-white" style="background-color:{{engine.players[i].sec_color}}">{{engine.current_game.current_prizes[engine.players[i].choice]}} <img src="/static/images/coin.png" style="width:22px" alt="Coin"></div>
			{% endif %}
        </div>
      </div>
    </div>
	{% endfor %}
	
  </div>
